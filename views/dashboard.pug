doctype html 
html(lang='en')
    head 
        meta(charset='utf-8')
        meta(http-equiv='X-UA-Compatible' content='IE=edge')
        // Favicon
        link(rel='icon' type='image/x-icon' href='assets/favicon.ico')
        meta(name='viewport' content='width=device-width initial-scale=1 shrink-to-fit=no')
        meta(name='description' content='Workflow Management System')
        meta(name='author' content='Akhil R Nair')
        
        title Workflow MAnagement System
        // Custom fonts for this template
        //link(href='vendor/fontawesome-free/css/all.min.css' rel='stylesheet' type='text/css')
        link(href='https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i' rel='stylesheet')
        // Custom styles for this template
        link(href='css/sb-admin-2.min.css' rel='stylesheet')

    body#page-top
        // Page Wrapper
        div#wrapper
            // Sidebar
            ul.navbar-nav.bg-gradient-info.sidebar.sidebar-dark.accordion#accordionSidebar
                // Sidebar - Brand
                a.sidebar-brand.d-flex.align-items-center.justify-content-center(href='#')
                    .sidebar-brand-icon.rotate-n-15
                        i.fas.fa-laugh-wink
                    .sidebar-brand-text.mx-3 #{work.name}
                
                // divider
                hr.sidebar-divider.my-0

                // Nav Item - Dashboard
                li.nav-item.active
                    a.nav-link(href=`/project/${work.slug}/dashboard`)
                        i.fas.fa-fw.fa-wrench
                        span Dashboard 
                li.nav-item.active
                    a.nav-link(href=`/project/${work.slug}/members`)
                        i.fas.fa-fw.fa-user 
                        span Project Members

                // Divider
                hr.sidebar-divider

                // Heading
                .sidebar-heading #{user.name}

                // Nav Item - Charts
                li.nav-item
                    a.nav-link(href='../../projects')
                        i.fas.fa-fw.fa-chart-area
                        span Other Projects
                hr.sidebar-divider
            // End of Sidebar

            // Content Wrapper
            .d-flex.flex-column#content-wrapper
                // Main Content
                div#content
                    // Topbar
                    nav.navbar.navbar-expand.navbar-light.bg-white.topbar.mb-4.static-top.shadow
                        // Sidebar Toggle (Topbar)
                        button.btn.btn-link.d-md-none.rounded-circle.mr-3#sidebarToggleTop
                            i.fa.fa-bars
                        
                        form.d-none.d-sm-inline-block.form-inline.mr-auto.ml-md-3.my-2.my-md-0.mw-100.navbar-search
                            .input-group
                                input.form-control.bg-light.border-0.small(input type='text' placeholder='Search for...' aria-label='Search' aria-describedby='basic-addon2')
                                .input-group-append
                                    button.btn.btn-info(type='button')
                                        i.fas.fa-search.fa-sm

                        // Topbar Navbar
                        ul.navbar-nav.ml-auto
                            // Nav Item - Search Dropdown (Visible Only XS)
                            li.nav-item.dropdown.no-arrow.d-sm-none
                                a.nav-link.dropdown-toggle(href='#' role='button' data-toggle='dropdown' aria-haspopup='true' aria-expanded='false')#searchDropdown
                                    i.fas.fa-search.fa-fw 
                                // Dropdown - Messages
                                .dropdown-menu.dropdown-menu-right.p-3.shadow.animated--grow-in(aria-labelledby='searchDropdown')
                                    form.form-inline.mr-auto.w-100.navbar-search
                                        .input-group 
                                            .form-control.bg-light.border-0.small(input type='text' placeholder='Search for...' aria-label='Search' aria-describedby='basic-addon2')
                                            .input-group-append
                                            button.btn.btn-info(type='button')
                                                i.fas.fa-search.fa-sm


                            // Nav Item - Alerts 
                            li.nav-item.dropdown.no-arrow.mx-1
                                a.nav-link.dropdown-toggle(href='#' role='button' data-toggle='dropdown' aria-haspopup='true' aria-expanded='false')#alertsDropdown
                                    i.fas.fa-bell.fa-fw
                                    // Counter - Alerts 
                                    span.badge.badge-danger.badge-counter 2+
                                // Dropdown - Alerts 
                                .dropdown-list.dropdown-menu.dropdown-menu-right.shadow.animated--grow-in(aria-labelledby='alertsDropdown')
                                    h6.dropdown-header Notifications
                                    a.dropdown-item.d-flex.align-items-center(href='#')
                                        .mr-3
                                            .icon-circle.bg-info
                                                i.fas.fa-file-alt.text-white
                                            .small.text-gray-500 January 2022 
                                            span.font-weight-bold Project 2 deadline exceeded 

                                    a.dropdown-item.d-flex.align-items-center(href='#')
                                        .mr-3
                                            .icon-circle.bg-success
                                                i.fas.fa-donate.text-white
                                            .small.text-gray-500 Feb 2022 
                                            span.font-weight-bold New user added by Boss- Verify!!!
                                    a.dropdown-item.text-center.small.text-gray-500(href='#') Show All Alerts

                            // Nav Item - Messages 
                            li.nav-item.dropdown.no-arrow.mx-1
                                a.nav-link.dropdown-toggle(href='#' role='button' data-toggle='dropdown' aria-haspopup='true' aria-expanded='false')
                                    i.fas.fa-envelope.fa-fw
                                    // Counter - Messages 
                                    span.badge.badge-danger.badge-counter 2
                                // Dropdown - Messages 
                                .dropdown-list.dropdown-menu.dropdown-menu-right.shadow.animated--grow-in(aria-labelledby='messagesDropdown')
                                    
                                    h6.dropdown-header Messages
                                    a.dropdown-item.d-flex.align-items-center(href='#')
                                        .dropdown-list-image.mr-3
                                            img.rounded-circle(src='img/undraw_profile_1.svg' alt='...')
                                            .status-indicator.bg-success
                                        .font-weight-bold
                                            .text-truncate Sir, can u change the review date?
                                            .small.text-gray-500 Nithin. 28m

                                    a.dropdown-item.d-flex.align-items-center(href='#')
                                        .dropdown-list-image.mr-3
                                            img.rounded-circle(src='img/undraw_profile_2.svg' alt='...')
                                            .status-indicator
                                        .font-weight-bold
                                            .text-truncate Sir , new project update completed.
                                            .small.text-gray-500 Karthika· 1d
                                    a.dropdown-item.text-center.small.text-gray-500(href='#') Read More Messages 
                            .topbar-divider.d-none.d-sm-block

                            // Nav Item - User Information 
                            li.nav-item.dropdown.no-arrow
                                a.nav-link.dropdown-toggle(href='#' role='button' data-toggle='dropdown' aria-haspopup='true' aria-expanded='false')#userDropdown
                                    span.mr-2.d-none.d-lg-inline.text-gray-600.small #{user.name}
                                    img.img-profile.rounded-circle(src='img/undraw_profile.svg')

                                // Dropdown - User Information 
                                .dropdown-menu.dropdown-menu-right.shadow.animated--grow-in(aria-labelledby='userDropdown')
                                    
                                    a.dropdown-item(href='#')
                                        i.fas.fa-user.fa-sm.fa-fw.mr-2.text-gray-400 Profile
                                    a.dropdown-item(href='#')
                                        i.fas.fa-cogs.fa-sm.fa-fw.mr-2.text-gray-400 Settings
                                    a.dropdown-item(href='#')
                                        i.fas.fa-list.fa-sm.fa-fw.mr-2.text-gray-400 Activity Log
                                    .dropdown-divider
                                    a.dropdown-item(href='#' data-toggle='modal' data-target='#logoutModal')
                                        i.fas.fa-sign-out-alt.fa-sm.fa-fw.mr-2.text-gray-400 Logout
                    // End of Topbar 

                    // Begin Page Content 
                    .container-fluid

                        // Page Heading 
                        .d-sm-flex.align-items-center.justify-content-between.mb-4
                            h1.h3.mb-0.text-gray-800 Dashboard
                            a.d-none.d-sm-inline-block.btn.btn-sm.btn-info.shadow-sm(href='#')
                                i.fas.fa-download.fa-sm.text-white-50 Print

                        // Content Row 
                        .row

                            // Earnings (Monthly) Card Example 
                            .col-xl-3.col-md-6.mb-4
                                .card.border-left-info.shadow.h-100.py-2
                                    .card-body
                                        .row.no-gutters.align-items-center
                                            .col.mr-2
                                                .text-xs.font-weight-bold.text-info.text-uppercase.mb-1 Revenue (Monthly)
                                                .h5.mb-0.font-weight-bold.text-gray-800 $40,000
                                            .col-auto
                                                i.fas.fa-calendar.fa-2x.text-gray-300

                            // Earnings (Monthly) Card Example 
                            .col-xl-3.col-md-6.mb-4
                                .card.border-left-success.shadow.h-100.py-2
                                    .card-body
                                        .row.no-gutters.align-items-center
                                            .col.mr-2
                                                .text-xs.font-weight-bold.text-success.text-uppercase.mb-1 Revenue (Annual)
                                                .h5.mb-0.font-weight-bold.text-gray-800 $215,000
                                            .col-auto
                                                i.fas.fa-dollar-sign.fa-2x.text-gray-300

                            // Earnings (Monthly) Card Example 
                            .col-xl-3.col-md-6.mb-4
                                .card.border-left-info.shadow.h-100.py-2
                                    .card-body
                                        .row.no-gutters.align-items-center
                                            .col.mr-2
                                                .text-xs.font-weight-bold.text-info.text-uppercase.mb-1 Tasks(Pending)

                                                .row.no-gutters.align-items-center
                                                    .col-auto
                                                        .h5.mb-0.mr-3.font-weight-bold.text-gray-800 40%
                                                    .col
                                                        .progress.progress-sm.mr-2
                                                            .progress-bar.bg-info(role='progressbar' style='width: 40%' aria-valuenow='50' aria-valuemin='0' aria-valuemax='100')
                                            .col-auto
                                                i.fas.fa-clipboard-list.fa-2x.text-gray-300

                            // Pending Requests Card Example 
                            .col-xl-3.col-md-6.mb-4
                                .card.border-left-warning.shadow.h-100.py-2
                                    .card-body
                                        .row.no-gutters.align-items-center
                                            .col.mr-2
                                                .text-xs.font-weight-bold.text-warning.text-uppercase.mb-1 Pending Requests
                                                .h5.mb-0.font-weight-bold.text-gray-800 12
                                            .col-auto
                                                i.fas.fa-comments.fa-2x.text-gray-300


                        // Content Row

                        .row

                            // Area Chart 
                            .col-xl-8.col-lg-7
                                .card.shadow.mb-4
                                    // Card Header - Dropdown 
                                    .card-header.py-3.d-flex.flex-row.align-items-center.justify-content-between
                                        h6.m-0.font-weight-bold.text-info Revenue Overview-Annual Update
                                        .dropdown.no-arrow
                                            a.dropdown-toggle(href='#' role='button' data-toggle='dropdown' aria-haspopup='true' aria-expanded='false')#dropdownMenuLink
                                                i.fas.fa-ellipsis-v.fa-sm.fa-fw.text-gray-400
                                            .dropdown-menu.dropdown-menu-right.shadow.animated--fade-in(aria-labelledby='dropdownMenuLink')
                                                .dropdown-header Dropdown Header:
                                                a.dropdown-item(href='#') Monthly
                                                a.dropdown-item(href='#') Quaterly
                                                .dropdown-divider
                                                a.dropdown-item(href='#') More Options 

                                    // Card Body
                                    .card-body
                                        .chart-area
                                            canvas#myAreaChart

                            // Pie Chart 
                            .col-xl-4.col-lg-5
                                .card.shadow.mb-4
                                    // Card Header - Dropdown
                                    .card-header.py-3.d-flex.flex-row.align-items-center.justify-content-between
                                        h6.m-0.font-weight-bold.text-info Revenue Sources
                                        .dropdown.no-arrow
                                            a.dropdown-toggle(href='#' role='button' data-toggle='dropdown' aria-haspopup='true' aria-expanded='false')#dropdownMenuLink
                                                i.fas.fa-ellipsis-v.fa-sm.fa-fw.text-gray-400

                                            .dropdown-menu.dropdown-menu-right.shadow.animated--fade-in(aria-labelledby='dropdownMenuLink')
                                                .dropdown-header Dropdown Header:
                                                a.dropdown-item(href='#') Direct
                                                a.dropdown-item(href='#') Social
                                                .dropdown-divider
                                                a.dropdown-item(href='#') More Options 


                                    // Card Body
                                    .card-body
                                        .chart-pie.pt-4.pb-2
                                            canvas#myPieChart
                                        .mt-4.text-center.small
                                            span.mr-2
                                                i.fas.fa-circle.text-primary Direct
                                            span.mr-2
                                                i.fas.fa-circle.text-success Social
                                            span.mr-2
                                                i.fas.fa-circle.text-info Referral 

                        // Content Row 
                        .row

                            // Content Column 
                            .col-lg-6.mb-4

                                // Project Card Example 
                                .card.shadow.mb-4
                                    .card-header.py-3
                                        h6.m-0.font-weight-bold.text-info Projects
                                    .card-body
                                        h4.small.font-weight-bold Software Updation
                                            span.float-right 20%

                                        .progress.mb-4
                                            .progress-bar.bg-danger(role='progressbar' style='width: 20%' aria-valuenow='20' aria-valuemin='0' aria-valuemax='100')   
                                        h4.small.font-weight-bold Sales Tracking
                                                span.float-right 40%

                                        .progress.mb-4
                                            .progress-bar.bg-warning(role='progressbar' style='width: 40%' aria-valuenow='40' aria-valuemin='0' aria-valuemax='100')   
                                        h4.small.font-weight-bold Database Updation
                                                span.float-right 60%

                                        .progress.mb-4
                                            .progress-bar(role='progressbar' style='width: 60%' aria-valuenow='60' aria-valuemin='0' aria-valuemax='100')   
                                        h4.small.font-weight-bold Payout Details
                                                span.float-right 80%
                                        
                                        .progress.mb-4
                                            .progress-bar.bg-info(role='progressbar' style='width: 80%' aria-valuenow='80' aria-valuemin='0' aria-valuemax='100')   
                                        h4.small.font-weight-bold Account CustomiZation
                                                span.float-right Complete!

                                        
                                        .progress.mb-4
                                            .progress-bar.bg-success(role='progressbar' style='width: 100%' aria-valuenow='100' aria-valuemin='0' aria-valuemax='100')

                            .col-lg-6.mb-4

                                // Illustrations
                                .card.shadow.mb-4
                                    .card-header.py-3
                                        h6.m-0.font-weight-bold.text-info Illustrations
                                    .card-body
                                        .text-center
                                            img.img-fluid.px-3.px-sm-4.mt-3.mb-4(style='width: 25rem;' src='img/test.svg' alt='...')
                                        p Some of the quality illustrations done by the team...<br>Make your own customisable themes.
                    // /.container-fluid 

                // End of Main Content 

                // Footer 
                footer.sticky-footer.bg-white
                    .container.my-auto
                        .copyright.text-center.my-auto
                            span Copyright &copy; Ergon 2022
                // End of Footer 

        // End of Content Wrapper 

    // End of Page Wrapper

    // Scroll to Top Button
    a.scroll-to-top.rounded(href='#page-top')
        i.fas.fa-angle-up

    // Logout Modal
    .modal.fade(tabindex='-1' role='dialog' aria-labelledby='exampleModalLabel' aria-hidden='true')#logoutModal
        
        .modal-dialog(role='document')
           .modal-content
                .modal-header
                    h5.modal-title#exampleModalLabel Ready to Leave?
                    button.close(type='button' data-dismiss='modal' aria-label='çlose')
                        span(aria-hidden="true")
                .modal-body Select "Logout" below if you are ready to end your current session.
                .modal-footer
                    button.btn.btn-secondary(type='button' data-dismiss='modal') Cancel
                    a.btn.btn-info(href='../../login') Logout

    // Bootstrap core JavaScript
    script(src='vendor/jquery/jquery.min.js')
    script(src='vendor/bootstrap/js/bootstrap.bundle.min.js')

    // Core plugin JavaScript
    script(src='vendor/jquery-easing/jquery.easing.min.js')

    // Custom scripts for all pages
    script(src='js/sb-admin-2.min.js')

    // Page level plugins 
    script(src='vendor/chart.js/Chart.min.js')

    // Page level custom scripts
    script(src='js/demo/chart-area-demo.js')
    script(src='js/demo/chart-pie-demo.js')
